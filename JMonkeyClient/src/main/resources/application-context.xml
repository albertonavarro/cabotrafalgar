
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:component-scan base-package="com.navid.trafalgar"/>
    <context:annotation-config/>
  
    <bean id="common.StartScreen" class="com.navid.trafalgar.games.MyStartScreen" autowire="byType"/>
    <bean id="common.EventManager" class="com.navid.trafalgar.manager.EventManager" autowire="byType"/>
    <bean id="common.Builder" class="com.navid.trafalgar.model.Builder2" autowire="byType" />
    
</beans>