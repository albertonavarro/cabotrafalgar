<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="selectProfile" controller="com.navid.trafalgar.mod.counterclock.SelectProfileScreenController">
        <layer id="background" childLayout="center">
        </layer>
        <layer id="foreground" childLayout="vertical" style="nifty-panel-no-shadow">
            <panel id="panel_top" height="15%" width="75%" align="center" childLayout="center">  
                <text text="Select your profile.." font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
            </panel>
            <panel id="panel_list" height="70%" width="75%" align="center" childLayout="vertical" style="nifty-panel-red">       
                <panel id="panel_mid_left" align="center" childLayout="vertical" width="95%">   
                    <text text="Profiles" font="Interface/Fonts/Default.fnt" />
                    <control id="profileList" name="listBox" displayItems="15" forceSelection="true" horizontal="off"   >
                    </control>
                </panel> 
                <panel id="panel_newprofile" align="center" childLayout="horizontal" style="nifty-panel-red" width="96%">   
                    <text text="New profile" font="Interface/Fonts/Default.fnt" width="20%" />    
                    <control id="newprofile" name="textfield" text="Please add your email here." horizontal="off" width="60%"  >
                    </control>
                    <control name="button" label="Add" id="addProfile" align="center" valign="center" visibleToMouse="true" width="20%" > 
                        <interact onClick="add()"/>
                    </control>
                </panel>
                <text text="Create a new profile by adding your email if you want to use online features." font="Interface/Fonts/Default.fnt" />
                <text text="Remember to verify your account. Please check your SPAM folder as well." font="Interface/Fonts/Default.fnt" />
            </panel>
            <panel id="panel_bottom" height="15%" width="75%" align="center" childLayout="horizontal">  
                <panel id="panel_bottom_right1" height="50%" width="25%" valign="center" childLayout="center">  
                    <control name="button" label="Back" id="QuitButton" align="center" valign="center" 
                             visibleToMouse="true" > 
                        <interact onClick="back()"/>
                    </control>
                </panel>
                <panel id="panel_bottom_right2" height="50%" width="25%" valign="center" childLayout="center">  
                    <control name="button" label="Select profile" id="MilestoneGame2" align="center" valign="center" 
                             visibleToMouse="true" > 
                        <interact onClick="next()"/>
                    </control>
                </panel>
                <panel id="panel_bottom_right3" height="50%" width="25%" valign="center" childLayout="center">  
                </panel>
            </panel>
        </layer>
    </screen>

</nifty>
 