<#macro main_content>
<panel id="panel_content" height="70%" width="75%" align="center" childLayout="horizontal">
    <panel id="panel_content_list" width="25%" align="center" childLayout="vertical">
        <control id="listChapters" name="listBox" displayItems="15" forceSelection="true" horizontal="off" >
        </control>
    </panel>

    <panel id="panel_content_pan" width="3%" align="center" childLayout="vertical"/>

    <panel id="panel_content_description" width="75%" align="center" childLayout="vertical">
        <text text="Description:" font="Interface/Fonts/Default.fnt" align="left" height="7%" />
        <panel id="panel_content_description_pan" height="3%" align="center" childLayout="vertical"/>
        <control id="chapterDescription" name="label" font="Interface/Fonts/Default.fnt" wrap="true" height="90%" text="" align="left" />
    </panel>
</panel>
</#macro>

<#assign title = "Select tutorial chapter:">

